generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id         String   @id @default(uuid())
  name       String
  type       String
  hints      String[]
  difficulty Int      @default(1)
  universe   String   @default("nba")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([name, universe], name: "name_universe")
  @@index([type])
  @@index([universe])
  @@index([universe, difficulty])
  @@map("characters")
}

model LeaderboardEntry {
  id            String   @id @default(uuid())
  sessionId     String   @unique @default(uuid()) @map("session_id")
  playerName    String   @map("player_name")
  score         Int      @default(0)
  gamesPlayed   Int      @default(0) @map("games_played")
  gamesWon      Int      @default(0) @map("games_won")
  currentStreak Int      @default(0) @map("current_streak")
  maxStreak     Int      @default(0) @map("max_streak")
  universe      String   @default("nba")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  @@index([score(sort: Desc)])
  @@index([playerName])
  @@index([universe])
  @@index([universe, score(sort: Desc)])
  @@map("leaderboard_entries")
}
